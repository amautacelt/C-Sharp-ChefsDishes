@model Dish

<h1 class="text-center"> Add a Dish!</h1>
<a href="/">Home</a>
<hr>


<form action="/adddish" method="post">
    <div class="form-group">
        <label asp-for="DishName">Name of Dish: </label>
        <input asp-for="DishName" class="form-control">
        <span class="text-danger" asp-validation-for="DishName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Calories"># of Calories: </label>
        <input asp-for="Calories" class="form-control">
        <span class="text-danger" asp-validation-for="Calories"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description: </label>
        <input asp-for="Description" class="form-control">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="ChefId">Chef: </label>
        <select class="form-control"  asp-for="ChefId">
            @foreach (var c in @ViewBag.Chefs)
            {
                <option value="@c.ChefId">@c.FirstName @c.LastName</option>
            }
        </select>
        @* <span asp-validation-for="ChefId"></span> *@
    </div>


    <div class="form-group">
        <label asp-for="Tastiness">Tastiness: </label>
        <select class="form-control" asp-for="Tastiness">
            <option value="" selected="selected">Choose...</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Tastiness" class="text-danger"></span>
    </div>

    <input type="submit" value="Add Dish" class="btn btn-info">
</form>












